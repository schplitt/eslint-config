{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "strict": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["es2023"],
    "moduleDetection": "force",
    "target": "esnext",
    "skipLibCheck": true,

  },
  "include": ["src"]
}
