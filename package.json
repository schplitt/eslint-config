{
  "name": "@schplitt/eslint-config",
  "version": "1.1.0",
  "type": "module",
  "packageManager": "pnpm@10.25.0",
  "description": "Opinionated ESLint config for TypeScript, Vue, Angular, and more",
  "keywords": [
    "eslint",
    "eslint-config",
    "flat-config",
    "typescript",
    "vue",
    "angular",
    "prettier-alternative",
    "linter",
    "code-style"
  ],
  "license": "MIT",
  "author": "schplitt",
  "homepage": "https://github.com/schplitt/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/schplitt/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/schplitt/eslint-config/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "@schplitt/eslint-config": "./dist/cli.mjs",
    "schplitt-eslint": "./dist/cli.mjs"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "prerelease": "eslint && tsc --noEmit && pnpm build",
    "release": "bumpp"
  },
  "dependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "angular-eslint": "^21.1.0",
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "eslint": "^9.39.1",
    "eslint-flat-config-utils": "^2.1.4",
    "eslint-merge-processors": "^2.0.0",
    "eslint-plugin-antfu": "^3.1.1",
    "eslint-plugin-erasable-syntax-only": "^0.4.0",
    "eslint-plugin-import-lite": "^0.3.0",
    "eslint-plugin-jsdoc": "^61.4.1",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-markdown-preferences": "^0.40.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-pnpm": "^1.4.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-vue": "^10.6.2",
    "eslint-processor-vue-blocks": "^2.0.0",
    "find-up-simple": "^1.0.1",
    "globals": "^16.5.0",
    "jsonc-eslint-parser": "^2.4.1",
    "nypm": "^0.6.2",
    "vue-eslint-parser": "^10.2.0",
    "yaml-eslint-parser": "^1.3.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.2",
    "tsdown": "^0.17.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
