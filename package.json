{
  "name": "@schplitt/eslint-config",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.15.1",
  "description": "Opinionated ESLint config for TypeScript, Vue, Angular, and more",
  "author": "schplitt",
  "license": "MIT",
  "homepage": "https://github.com/schplitt/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/schplitt/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/schplitt/eslint-config/issues"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "flat-config",
    "typescript",
    "vue",
    "angular",
    "prettier-alternative",
    "linter",
    "code-style"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "@schplitt/eslint-config": "./dist/cli/index.js",
    "schplitt-eslint": "./dist/cli/index.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.2",
    "tsdown": "^0.17.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "eslint": "^9.39.1"
  }
}
